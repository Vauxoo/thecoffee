<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res_config_settings_view_form.l10n_pe_currency</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="odoope_ruc_validation.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='l10n_pe_dni']" position="after">
                <div
                    attrs="{'invisible': [('module_l10n_pe_currency', '=', False)]}"
                    class="col-12 o_setting_box"
                    id="l10n_pe_exchange_rate"
                >
                    <div class="o_setting_left_pane">
                        <field name="l10n_pe_exchange_rate_validation" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label
                            for="l10n_pe_exchange_rate_validation"
                            string="Exchange Rate validation"
                        />
                        <div
                            class="text-muted"
                        >Check the exchange rate of the day from the SUNAT portal</div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
