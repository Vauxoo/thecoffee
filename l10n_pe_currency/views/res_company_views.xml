<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit.l10n_pe_currency</field>
        <field name="model">res.company</field>
        <field
            name="inherit_id"
            ref="odoope_ruc_validation.view_form_company_inherited"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='validation_info']/group/group[3]"
                position="after"
            >
                <group string="Exchange Rate validation">
                    <field name="l10n_pe_exchange_rate_validation" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
